<div class="container">
  <div class="row">
    
    
    <div class="col-md-3">
      <%= render 'sidebar', book: @book, user: @user %>
    </div>
    
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Profile</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%=link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100), class: "rounded" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>