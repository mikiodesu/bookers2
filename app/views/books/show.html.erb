<div class="container mt-4">
  <div class="row justify-content-center">

    <!-- サイドバー -->
    <div class="col-md-3">
      <%= render 'sidebar', book: @book_new, user: @user %>
    </div>

    
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <div class="row align-items-start text-center">

        
        <div class="col-md-3">
          <%= image_tag @book.user.get_profile_image(100, 100), class: "rounded mb-2" %>
          <p class="fw-bold mb-0"><%= link_to @book.user.name, user_path(@book.user) %></p>
        </div>

        <!-- Title -->
        <div class="col-md-3 text-start">
          <h2>Title</h2>
          <p><%= link_to @book.title, book_path(@book) %></p>
        </div>

        <!-- Opinion -->
        <div class="col-md-3 text-start">
          <h2>Opinion</h2>
          <p><%= @book.body %></p>
        </div>

        <!-- Edit / Destroy ボタン 横並び -->
        <div class="col-md-3 d-flex justify-content-center align-items-center gap-2">
          <% if @book.user == current_user %>
            <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-outline-primary" %>
            <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
          <% end %>
        </div>

      </div>
    </div>

  </div>
</div>