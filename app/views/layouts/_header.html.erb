<% if user_signed_in? %>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to user_path(current_user), class: "nav-link text-light" do %>
                <i class="fa-solid fa-house"></i> Home
              <% end %>
            </li>
            <li>
              <%= link_to users_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-users"></i> Users
              <% end %>
            </li>
            <li>
              <%= link_to books_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-book-open"></i></i> Books
              <% end %>
            </li>
            <% if user_signed_in? %>  
              <li>
               <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light", data: { confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-right-from-bracket"></i> Log out
               <% end %>
              </li>

            <% else %>
              <li>
                <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-user-plus"></i> Sign up
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-to-bracket"></i> Log in
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
<% else %>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to root_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-house"></i> Home
              <% end %>
            </li>
            <li>
              <%= link_to home_about_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-link"></i> About
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-light", data: { confirm: "Are you sure?" } %>
              </li>
            <% else %>
              <li>
                <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-user-plus"></i> Sign up
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-to-bracket"></i> Log in
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
<% end %>