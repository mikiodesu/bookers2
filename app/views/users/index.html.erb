<div class="container">
  <div class="row">
    
    
    <div class="col-md-3">
      <%= render 'books/sidebar', book: @book, user: @user %>
    </div>
    
    
    <div class="col-md-8 offset-md-1">
      <h1 class="mb-4">Users</h1>
      
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100), class: "rounded" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user), class: "btn btn-sm btn-outline-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
